<% content_for :title, '新規登録' %>

<div class="max-w-md mx-auto bg-white border border-gray-200 rounded-lg p-6 shadow-sm form-light">
  <h1 class="text-xl font-semibold mb-4 text-gray-900">新規登録</h1>
  <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), class: 'space-y-4') do |f| %>
    <div>
      <%= f.label :email, 'メールアドレス' %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email' %>
    </div>
    <div>
      <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password, autocomplete: 'new-password' %>
    </div>
    <div>
      <%= f.label :password_confirmation, 'パスワード（確認）' %>
      <%= f.password_field :password_confirmation, autocomplete: 'new-password' %>
    </div>
    <div class="form-actions">
      <%= f.submit '登録する', class: 'btn' %>
    </div>
  <% end %>
  <div class="mt-4 text-sm text-gray-600">
    <%= render 'devise/shared/links' %>
  </div>
</div>
