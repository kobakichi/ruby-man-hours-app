<%= form_with(model: project, class: "space-y-6") do |f| %>
  <% if project.errors.any? %>
    <div class="border border-red-200 bg-red-50 text-red-800 rounded-md px-4 py-3">
      <h2 class="font-semibold mb-2"><%= pluralize(project.errors.count, 'error') %> があり保存できません:</h2>
      <ul class="list-disc ml-5">
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-grid">
    <div>
      <%= f.label :name, '名称' %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :client_name, '顧客名' %>
      <%= f.text_field :client_name %>
    </div>
    <div>
      <label class="inline-flex items-center gap-2 mt-6">
        <%= f.check_box :billable %>
        課金対象
      </label>
    </div>
    <div>
      <%= f.label :budget_hours, '予算(時間)' %>
      <%= f.number_field :budget_hours, min: 0, step: 1 %>
    </div>
    <div>
      <%= f.label :start_date, '開始日' %>
      <%= f.date_field :start_date %>
    </div>
    <div>
      <%= f.label :end_date, '終了日' %>
      <%= f.date_field :end_date %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit '保存', class: 'btn' %>
    <%= link_to '一覧に戻る', projects_path, class: 'btn-secondary' %>
  </div>
<% end %>
